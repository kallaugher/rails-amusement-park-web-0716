<h1>Sign In Page</h1>

<%= form_tag sessions_path, method: "post" do %>
  <label>Name:</label>
  <%= text_field_tag :name, @user.name, id: "user[name]", name: "user[name]" %><br>

  <label>Password:</label>
  <%= password_field_tag :user_password, @user.password, id: "user[password]", name: "user[password]" %><br>

  <%= submit_tag "Sign In"%>

<% end %>
